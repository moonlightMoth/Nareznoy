<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vidinalex.helpme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/login" />
        <activity
            android:name=".EmailRegistrationActivity"
            android:label="@string/registration"/>

        <activity
            android:name=".ProfileActivity"
            android:label="@string/drawer_item_profile" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings" />
        <activity android:name=".PhoneLoginActivity"/>
        <activity
            android:name=".PhoneVerificationActivityDialog"
            android:theme="@style/Theme.AppCompat.Dialog"/>

        <receiver
            android:name=".PhoneLinker">
            <intent-filter>
                <action android:name="verificationCodeGot"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>